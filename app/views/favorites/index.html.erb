<h1>Favorites</h1>

<div class="row pt-3">
  <% @favorites.each do |favorite| %>
    <div class="col-8">
      <div class="card mb-3">
        <div class="card-header">
          <% if current_user %>
            <%= image_tag user_avatar(current_user, 20), class: "rounded-circle" %> <%= favorite.speek.user.username %> </br>
            <small>Spoke on: <%= favorite.speek.created_at.strftime('%b %d, %Y') %></small>
          <% else %>
            <%= image_tag user_avatar(favorite.speek.user, 20), class: "rounded-circle" %> <%= favorite.speek.user.username %> </br>
            <small>Spoke on: <%= favorite.speek.created_at.strftime('%b %d, %Y') %></small>
          <% end %>
        </div>
        <div class="card-body">
          <p class="card-text"><%= favorite.speek.content %></p>
        </div>
        <div class="card-footer">
          <% if favorite.speek.comments.any? && user_signed_in? %>
            <ul class="nav nav-pills card-header-pills">
              <li class="nav-item">
                <% if favorite.speek.liked?(current_user) %>
                  <%= link_to like_path(favorite.speek), method: "put", class: "nav-link", disabled: true do %>
                    <i class="fas fa-thumbs-up"></i>
                  <% end %>
                <% else %>
                  <%= button_to like_path(favorite.speek), method: "put", class: "nav-link" do %>
                    <i class="fas fa-thumbs-up"></i>
                  <% end %>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to favorite_path(favorite.speek), method: "put", class: "nav-link" do %>
                  <i class="fas fa-heart"></i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to speek_path(favorite.speek), class: "nav-link" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
              </li>
            </ul>
          <% elsif user_signed_in?  %>
            <ul class="nav nav-pills card-header-pills">
              <li class="nav-item">
                <%= link_to "Like", class: "nav-link" do %>
                  <i class="fas fa-thumbs-up"></i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to favorite_path(favorite.speek), method: "put", class: "nav-link" do %>
                  <i class="fas fa-heart"></i>
                <% end %>
              </li>
            </ul>
          <% elsif favorite.speek.comments.any?  %>
            <ul class="nav nav-pills card-header-pills">
              <li class="nav-item">
                <%= link_to speek_path(favorite.speek), class: "nav-link" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
