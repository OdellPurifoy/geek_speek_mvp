<%= form_with model: [commentable, Comment.new], local: true do |form| %>
  <div class="form-group">
    <%= form.text_area :comment_content, placeholder: 'Add a comment...', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
